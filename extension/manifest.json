{
  "manifest_version": 3,
  "name": "Page Anonymizer â€” Privacy Copy",
  "version": "0.2.0",
  "description": "Anonymize selected words on any page and copy a sanitized version to your AI tool.",
  "action": {
    "default_title": "Page Anonymizer",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "contextMenus"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "sw.js"
  },
  "options_page": "options.html",
  "commands": {
    "toggle-site": {
      "suggested_key": { "default": "Ctrl+Shift+Y" },
      "description": "Toggle anonymizer on this site"
    },
    "copy-page": {
      "suggested_key": { "default": "Ctrl+Shift+U" },
      "description": "Anonymize & Copy page text"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  }
}
